<%- include("partials/header") %>

<h1>Compose</h1>
<form action="/compose" method="post">
   
    <div class="form-group">
        <label class="mt-2"> Title </label>
        <input class="form-control" type="text" name="postTitle" placeholder="Title">
        <label class="mt-2"> Post </label>
        <textarea  class="form-control"  name="postBody" cols="8" rows="3" placeholder="Post Body"></textarea>
    </div>
    <button type="submit" name="button " class="btn btn-outline-dark">Publish</button>
</form>

